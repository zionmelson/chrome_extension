{
  "manifest_version": 3,
  "name": "My Extension",
  "version": "1.0",
  "description": "Retrieve and display recommended YouTube videos",
  "host_permissions": [
    "https://www.googleapis.com/*"
  ],
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html"},
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ]
}
